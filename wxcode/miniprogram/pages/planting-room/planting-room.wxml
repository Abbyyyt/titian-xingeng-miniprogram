<view class="container">
  <!-- 顶部导航栏 -->
  <view class="nav-bar">
    <view class="back" bindtap="goBack">
      <text class="back-icon">←</text>
    </view>
    <view class="title">种植房间</view>
    <view class="right-icons">
      <text class="more-icon">•••</text>
      <view class="share-icon">○</view>
    </view>
  </view>

  <!-- 主标题区域 -->
  <view class="title-area">
    <view class="huge-title">
      <text>多人种植</text>
      <text>房间</text>
    </view>
    <view class="join-text">
      <text>加入种植房间</text>
      <text>获取加倍专注奖励</text>
    </view>
  </view>

  <!-- 中间大卡片 -->
  <view class="main-card">
    <image class="study-person" src="/images/focus-person.png" mode="aspectFit"></image>
    <view class="focus-num">1290人在专注</view>
  </view>

  <!-- 精选房间区域 -->
  <view class="rooms-section">
    <view class="rooms-header">
      <text class="rooms-title">精选房间</text>
      <view class="rank-btn">
        <text>全部排行</text>
        <view class="rank-triangle">▲</view>
      </view>
    </view>

    <!-- 房间列表 -->
    <view class="rooms-list">
      <!-- 房间1 -->
      <view class="room-card">
        <image class="room-pic" src="/images/room1.jpg" mode="aspectFill"></image>
        <view class="room-content">
          <view class="room-name">价值观非常队</view>
          <view class="room-time">进阶 60min</view>
          <view class="room-labels">
            <text class="label study-label">考公自习室</text>
            <text class="label reward-label">持续打卡·兑换实体作物</text>
          </view>
        </view>
        <view class="member-num">17人在专注</view>
      </view>

      <!-- 房间2 -->
      <view class="room-card">
        <image class="room-pic" src="/images/room2.jpg" mode="aspectFill"></image>
        <view class="room-content">
          <view class="room-name">上岸者联盟</view>
          <view class="room-time">基础 30min</view>
          <view class="room-labels">
            <text class="label study-label">考研自习室</text>
            <text class="label reward-label">持续打卡·兑换实体作物</text>
          </view>
        </view>
        <view class="member-num">8人在专注</view>
      </view>
    </view>
  </view>
</view> 