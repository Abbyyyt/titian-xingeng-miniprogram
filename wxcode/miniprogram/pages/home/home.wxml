<view class="container">
  <!-- 标题栏 -->
  <view class="header">
    <view class="menu-btn">—</view>
    <view class="title-container">
      <text class="title">梯田心耕</text>
      <text class="arrow-down">▼</text>
    </view>
    <view class="header-right">
      <view class="dots">•••</view>
      <view class="camera">○</view>
    </view>
  </view>

  <!-- 主要内容区域 -->
  <view class="content">
    <view class="section-title">我的梯田</view>
    
    <!-- 功能卡片网格 -->
    <view class="grid">
      <!-- 专注计划卡片 -->
      <view class="grid-item pink" bindtap="goToFocusPlan">
        <view class="item-content">
          <text>专注计划</text>
          <image class="white-arrow" src="/images/white-arrow.png" mode="aspectFit"></image>
        </view>
      </view>

      <!-- 我的耕田卡片 -->
      <view class="grid-item yellow" bindtap="goToMyTerrace">
        <view class="item-content">
          <image class="clock-icon" src="/images/clock.png" mode="aspectFit"></image>
          <text>我的耕田</text>
        </view>
      </view>

      <!-- VR农田卡片 -->
      <view class="grid-item orange" bindtap="goToVRView">
        <view class="item-content">
          <image class="close-icon" src="/images/close.png" mode="aspectFit"></image>
          <text>VR农田</text>
        </view>
      </view>

      <!-- 多人种植房间卡片 -->
      <view class="grid-item blue">
        <view class="item-content">
          <image class="room-card" bindtap="goToMultiRoom" src="/images/room-card.png" mode="aspectFit"></image>
          <text bindtap="goToMultiRoom">多人种植\n房间</text>
        </view>
      </view>
    </view>

    <!-- 今日任务区域 -->
    <view class="daily-task">
      <view class="task-header">
        <text>今日任务</text>
        <text class="view-all">查看全部</text>
      </view>
      <view class="task-card">
        <!-- <image class="tractor" src="/images/tractor.png" mode="aspectFit"></image> -->
        <view class="task-info">
          <text>记单词</text>
          <text>1小时</text>
        </view>
        <view class="start-btn" bindtap="startFocusTimer">START</view>
      </view>
    </view>
  </view>

  <!-- 底部导航栏 -->
  <view class="tab-bar">
    <view class="tab-item active">
      <image src="/images/home-active.png" mode="aspectFit"></image>
      <text>首页</text>
    </view>
    <view class="tab-item">
      <image src="/images/shop.png" mode="aspectFit"></image>
      <text>商城</text>
    </view>
    <view class="tab-item">
      <image src="/images/activity.png" mode="aspectFit"></image>
      <text>活动</text>
    </view>
    <view class="tab-item">
      <image src="/images/profile.png" mode="aspectFit"></image>
      <text>我的</text>
    </view>
  </view>
</view> 