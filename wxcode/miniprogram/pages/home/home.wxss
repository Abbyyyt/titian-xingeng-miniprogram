.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #9DE355 0%, #9DE355 50%, #FFFFFF 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}

/* 标题栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
}

.menu-btn {
  font-size: 40rpx;
  color: #000;
  font-weight: normal;
}

.title-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

.arrow-down {
  font-size: 20rpx;
  color: #000;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.dots {
  font-size: 32rpx;
  letter-spacing: 2rpx;
  color: #000;
}

.camera {
  font-size: 40rpx;
  color: #000;
}

/* 主要内容区域样式 */
.content {
  padding-top: 20rpx;
}

.section-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 40rpx;
}

/* 网格布局样式 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.grid-item {
  border-radius: 24rpx;
  padding: 30rpx;
  height: 240rpx;
  position: relative;
  overflow: hidden;
}

.item-content {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.grid-item.pink {
  background: linear-gradient(135deg, #FFB7C5 0%, #FF91A5 100%);
}

.grid-item.yellow {
  background: linear-gradient(135deg, #FFE4A1 0%, #FFD98D 100%);
}

.grid-item.orange {
  background: linear-gradient(135deg, #FFDAB5 0%, #FFC18D 100%);
}

.grid-item.blue {
  background: linear-gradient(135deg, #B8E7FF 0%, #8DD6FF 100%);
}

.grid-item text {
  color: #000;
  font-size: 32rpx;
  font-weight: 500;
}

.white-arrow {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.clock-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
}

.room-card {
  width: 80rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

/* 今日任务区域样式 */
.daily-task {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.task-header text {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}

.view-all {
  color: #666;
  font-size: 28rpx;
}

.task-card {
  background: #4CAF50;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
}

