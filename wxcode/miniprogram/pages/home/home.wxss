.task-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.task-info text {
  color: #fff;
  font-size: 32rpx;
}

.start-btn {
  background: rgba(255, 255, 255, 0.3);
  color: #fff;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  z-index: 1;
}

/* 底部导航栏样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  padding-bottom: 12rpx;
}

.tab-item.active {
  color: #4CAF50;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

/* 首页图标特殊尺寸 */
.tab-item:nth-child(1) image {
  width: 64rpx;
  height: 64rpx;
  margin-top: 25rpx;
}

/* 商城图标特殊尺寸 */
.tab-item:nth-child(2) image {
  width: 68rpx;
  height: 68rpx;
}

/* 活动图标特殊尺寸 */
.tab-item:nth-child(3) image {
  width: 52rpx;
  height: 52rpx;
}

/* 我的图标特殊尺寸 */
.tab-item:nth-child(4) image {
  width: 56rpx;
  height: 56rpx;
}

.tab-item text {
  font-size: 24rpx;
  line-height: 24rpx;
  height: 24rpx;
  position: relative;
  bottom: 0;
}

/* 我的耕田跳转按钮样式 */
.terrace-btn {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.terrace-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.terrace-btn text {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
} 