.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #9DE355;
}

/* 顶部状态栏样式 */
.status-bar {
  background: #9DE355;
  padding: 20rpx 40rpx;
  color: #000;
  font-size: 32rpx;
}

/* 顶部标题栏样式 */
.header {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.back {
  font-size: 40rpx;
}

.title {
  font-size: 36rpx;
}

.right {
  font-size: 40rpx;
}

.back-btn image {
  width: 48rpx;
  height: 48rpx;
}

.right-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* VR内容区域样式 */
.content-image {
  flex: 1;
  width: 100%;
  height: 1400rpx;
}

.vr-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 底部标题样式 */
.footer {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
} 