.container {
  min-height: 100vh;
  background: linear-gradient(135deg, rgba(157, 227, 85, 0.98) 0%, rgba(157, 227, 85, 0.98) 60%, rgba(255, 215, 0, 0.98) 100%);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 30rpx 40rpx;
}

.back-icon, .menu-icon {
  width: 48rpx;
  height: 48rpx;
}

.back-icon {
  font-size: 44rpx;
  color: #fff;
  font-weight: bold;
  padding: 10rpx;
}

.nav-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
}

/* 主标题区域 */
.header {
  padding: 40rpx;
}

.main-title {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.title-large {
  color: #fff;
  font-size: 64rpx;
  font-weight: bold;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.title-sub {
  color: #fff;
  font-size: 56rpx;
  font-weight: bold;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 计划设置卡片 */
.plan-card {
  margin: 20rpx 30rpx;
  padding: 0;
}

/* 通用模块样式 */
.module {
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 40rpx;
  overflow: hidden;
  background: #FFFFFF;
}

.module-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  opacity: 1;
}

.module-content {
  position: relative;
  z-index: 2;
  padding: 40rpx;
  background: transparent;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 计划名称 */
.plan-name {
  margin-bottom: 40rpx;
}

.plan-input {
  height: 96rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.placeholder {
  color: #999;
}

/* 分类选择 */
.category-list {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.category-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.category-item.active {
  background: #4CAF50;
  color: #fff;
}

/* 计时方式 */
.timer-mode {
  margin-bottom: 40rpx;
}

.timer-options {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.timer-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.timer-item.active {
  background: #4CAF50;
  color: #fff;
}

/* 时间选择 */
.duration {
  margin-top: 20rpx;
}

.slider-container {
  position: relative;
  margin-top: 10rpx;
  padding: 0 40rpx;
}

/* 滑动条样式 */
slider {
  margin: 0;
}

/* 滑动条轨道 */
.wx-slider-handle-wrapper {
  height: 6rpx !important;
  background: #FFFFFF !important;
  border: 1rpx solid rgba(0, 0, 0, 0.1) !important;
}

/* 已滑动部分 */
.wx-slider-track {
  background: #4CAF50 !important;
  height: 6rpx !important;
}

/* 滑块 */
.wx-slider-handle {
  width: 0 !important;
  height: 0 !important;
  background: transparent !important;
  border: none !important;
}

.duration-value {
  position: absolute;
  right: 20rpx;
  top: -40rpx;
  background: #FFFFFF;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #333333;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 底部按钮 */
.bottom-btn {
  position: fixed;
  bottom: 48rpx;
  left: 30rpx;
  right: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: #4CAF50;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(76, 175, 80, 0.2);
}

.submit-btn::after {
  border: none;
}

/* 计划名称和分类模块 */
.plan-module {
  height: 400rpx;
}

/* 计时设置模块 */
.timer-module {
  height: 400rpx;
}

/* 调整输入框和按钮的背景色，确保可见 */
.plan-input {
  background: rgba(255, 255, 255, 0.9);
}

.category-item, .timer-item {
  background: rgba(255, 255, 255, 0.9);
}

.category-item.active, .timer-item.active {
  background: #4CAF50;
}

.duration-value {
  background: rgba(255, 255, 255, 0.9);
} 