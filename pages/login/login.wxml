<view class="container">
  <!-- 顶部背景图区域 -->
  <view class="header">
    <image class="bg-image" src="/images/login-bg.jpg" mode="aspectFill"></image>
    <view class="header-content">
      <view class="time">08:34</view>
      <view class="status-bar">
        <view class="signal">5G</view>
        <view class="battery"></view>
      </view>
      <view class="title-container">
        <view class="welcome-text">WELCOME TO</view>
        <view class="title">梯田心耕</view>
      </view>
    </view>
  </view>

  <!-- 登录表单区域 -->
  <view class="login-container">
    <view class="login-title">登录</view>
    <view class="form-item">
      <view class="label">账号</view>
      <input class="input" type="text" placeholder="请输入账号" bindinput="onAccountInput"/>
    </view>
    <view class="form-item">
      <view class="label">密码</view>
      <input class="input" type="password" placeholder="请输入密码" bindinput="onPasswordInput"/>
    </view>
    <button class="login-btn" bindtap="onLogin" style="position: relative; left: 1rpx; top: 12rpx">立即登录</button>
  </view>
</view> 